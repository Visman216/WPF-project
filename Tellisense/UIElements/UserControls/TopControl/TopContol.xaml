<UserControl x:Class="Tellisense.TopContol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tellisense"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="1000">
    <Border>

        <Border.Effect>
            <DropShadowEffect ShadowDepth="2" Opacity="0.5" Direction="270"/>
        </Border.Effect>

        <Grid>


            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <local:TaskBar Grid.Row="0"/>

            <local:TrackBar Grid.Row="1"/>

        </Grid>

    </Border>
</UserControl>
